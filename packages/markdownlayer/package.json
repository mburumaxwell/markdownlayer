{
  "name": "markdownlayer",
  "version": "0.4.0-beta.13",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./remark": {
      "types": "./dist/remark/index.d.ts",
      "import": "./dist/remark/index.js",
      "require": "./dist/remark/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist"
      ],
      "react": [
        "./dist/react"
      ],
      "remark": [
        "./dist/remark"
      ]
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "vitest",
    "clean": "rimraf .turbo dist"
  },
  "dependencies": {
    "@fal-works/esbuild-plugin-global-externals": "2.1.2",
    "@markdoc/markdoc": "0.5.1",
    "@mdx-js/esbuild": "3.1.0",
    "chokidar": "4.0.3",
    "github-slugger": "2.0.0",
    "globby": "14.1.0",
    "gray-matter": "4.0.3",
    "inflection": "3.0.2",
    "mdast-util-to-string": "4.0.0",
    "reading-time": "1.5.0",
    "rehype-raw": "7.0.0",
    "remark-directive": "4.0.0",
    "remark-emoji": "5.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "sharp": "0.34.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/estree": "1.0.7",
    "@types/inflection": "2.0.0",
    "@types/mdast": "4.0.4",
    "@types/mdx": "2.0.13",
    "@types/unist": "3.0.3",
    "mdast-util-directive": "3.1.0",
    "remark-rehype": "11.1.2",
    "unified": "11.0.5",
    "unist-util-visit": "5.0.0"
  },
  "peerDependencies": {
    "esbuild": "0",
    "next": "13 || 14 || 15",
    "react": "18 || 19",
    "react-dom": "18 || 19"
  },
  "author": "mburumaxwell",
  "homepage": "https://github.com/mburumaxwell/markdownlayer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mburumaxwell/markdownlayer.git"
  },
  "bug": {
    "url": "https://github.com/mburumaxwell/markdownlayer/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
