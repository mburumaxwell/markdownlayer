{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*", "**/.eslintrc.yml"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_SHOW_DRAFTS", "CL_DEBUG"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".markdownlayer/**", "out/**"]
    },
    "lint": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
